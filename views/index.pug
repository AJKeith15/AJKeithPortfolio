extends layout.pug

block content 
  article.grid-container.portfolio-intro
    div
      h1 My Portfolio
      p.lead.text-light
        | Some applications I have created to test my abilities in various coding techniques.
  article.grid-container.portfolio-index
    .grid-x.grid-margin-x.small-up-2.medium-up-2.large-up-3
      // loop through projects array to display thumbnail, project name, and build link to project page
      each val in projects
        .cell
          a(href=`/project/${val.id}`)
            img.thumbnail(src=`${val.image_urls[0]}`)
            h5 #{val.project_name}